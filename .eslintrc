{
    "extends": "eslint:recommended",
    "env": {
        "node": true,
        "es6":true
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "rules": {
        "strict": 0,
        "indent": ["error", 2, { "SwitchCase": 1 }],
        "comma-dangle": 0,
        "no-var": 0,
        "func-names": 0,
        "object-shorthand": 0,
        "prefer-arrow-callback": 0,
        "no-console": 0,
        "arrow-parens": 0,
        "space-before-function-paren": ["error", "always"]
    }
}
